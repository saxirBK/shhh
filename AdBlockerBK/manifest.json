{
    "manifest_version": 3,
    "name": "BK's AdBlocker",
    "version": "1.0",
    "description": "Bloquea anuncios en sitios web",
    "permissions": ["cookies", "declarativeNetRequest", "storage"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    }
  }
  